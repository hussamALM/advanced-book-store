@{
    ViewData["Title"] = "Email";
}
@{
    Layout = "~/Views/Shared/adminLayout.cshtml";
}
<style>
    body {
        background-color: rgba(244, 233, 220, 0.411);
    }

</style>

<h1 class="text-center ">Send Email</h1>
<hr class="mb-5"/>
<div class="container">
<form asp-action="email">
    <div class="form-group">
        <label class="control-label"> address</label>
        <input name="address" class="form-control" /> <br />
    </div>
    <div class="form-group">
        <label for="subject" class="control-label">subject</label>
        <input name="subject" class="form-control" /> <br />
    </div>
    <div class="form-group">
        <label for="body" class="control-label">body</label><br/>
        <textarea name="body" rows="6" cols="100"> </textarea>


    </div>
    <input type="submit" value="Send" class="btn btn-success mt-3" />
    <p> @ViewData["message"]</p>
</form>
</div>