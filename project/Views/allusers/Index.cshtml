@model IEnumerable<project.Models.allusers>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/adminLayout.cshtml";
}
<style>
    body {
        background-color: rgba(244, 233, 220, 0.411);
    }

    
</style>

<h1 class="text-center">Users Index</h1>
<hr class="mb-5"/>
<div class="container">
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.registDate)
            </th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody class="bg-light">
@foreach (var item in Model) {
        <tr>
                    <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.name)
            </td>
                    <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.password)
            </td>
                    <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.role)
            </td>
                    <td style="vertical-align: middle;">
                @Html.DisplayFor(modelItem => item.registDate)
            </td>
                    <td style="vertical-align: middle;">
                        <a asp-action="Edit" class="btn btn btn-warning" asp-route-id="@item.Id">Edit</a> 
                    </td>
                    <td>
                <a asp-action="Details" class="btn btn btn-dark"   asp-route-id="@item.Id">Details</a> 
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
            
        </tr>
}
    </tbody>
</table>
</div>